
<ul>
  <% @categories.each do |category| %>
    <li>
      <%= link_to(category_path(id: category.id)) do %>
        <div>
          <% if category.icon.attached? %>
          <img
            src="<%= url_for(category.icon) %>" 
            alt="<%= category.name %>"
          />
          <% end %>
        </div>
        <div>
          <h2>
            <%= category.name %>
          </h2>
        </div>
        <div>
          <% total = 0 %>
          <% category.expenses.each do |exp| %>
            <% total += exp.amount %>
          <%end%>
          <%= total %>
        </div>
      <% end %>
    </li>
  <% end %>
</ul>

<%= link_to("Add new Category", new_category_path) %>